{
  "index_patterns": ["filebeat-index-*"],
  "version": 1,
  "template": {
    "settings": {
      "number_of_shards": 1,
      "number_of_replicas": 0,
      "index.lifecycle.name": "filebeat_policy",
      "index.lifecycle.rollover_alias": "filebeat-index"
    },
    "mappings": {
      "dynamic": false,
      "properties": {
        "@timestamp": {
          "type": "date"
        },
        "@version": {
          "type": "keyword"
        },
        "host": {
          "type": "object",
          "properties": {
            "name": {
              "type": "keyword"
            }
          }
        },
        "container": {
          "type": "object",
          "properties": {
            "id": {
              "type": "keyword"
            },
            "name": {
              "type": "keyword"
            },
            "image": {
              "type": "object",
              "properties": {
                "name": {
                  "type": "keyword"
                }
              }
            }
          }
        },
        "program": {
          "type": "keyword"
        },
        "message": {
          "type": "text"
        },
        "parsed_message": {
          "type": "object",
          "properties": {
            "log": {
              "type": "object",
              "properties": {
                "request": {
                  "type": "object",
                  "properties": {
                    "method": { "type": "keyword" },
                    "path": { "type": "keyword" },
                    "query_string": { "type": "text" },
                    "remote_addr": { "type": "ip" },
                    "ip_client": { "type": "ip" },
                    "body": { "type": "text" },
                    "error": { "type": "text" }
                  }
                },
                "response": {
                  "type": "object",
                  "properties": {
                    "status_code": { "type": "integer" },
                    "response_body": { "type": "text" }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
